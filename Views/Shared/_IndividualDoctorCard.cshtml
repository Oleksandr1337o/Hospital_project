@model Hospital.Models.Doctor

<div class="col-lg-4 col-md-6 pb-4 filter @Model.Job_Title.Title.Replace(' ','_')">
    <!-- Card-->
    <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
        <div class="card-body px-3 pt-3 pb-1 row">
            <div class="col-7" style="color:black;font-weight:bold"><label class="floatleft">@Model.User_N.FullName</label></div>
        </div>
        <img class="card-img-top d-block mx-auto mb-3 custom-image-size" style="width:150px;height:200px;object-fit:cover" src="@WC.ImagePath@Model.Image"
             alt="Card image cap">
        <div class="card-body p-1 px-3 row">
            <div class="col-6">
                <span class="badge p-2 border w-100" style="background-color:lavenderblush">@Model.Job_Title.Title</span>
            </div>
            <div class="col-12 p-1">
                <a asp-controller="Calendar" asp-action="Calendar" asp-route-doctorId="@Model.User_N.FullName" class="btn btn-dark form-control btn-sm p-2" 
                style="height:40px; color: white; font-weight: bold">Register with a doctor</a>
            </div>
        </div>
    </div>
</div>
@model IEnumerable<Hospital.Models.Job_title>

    <div class="container p-3">
       <div class="row pt-4">
          <div class="col-6">
             <h2 class="text-primary">Job Title</h2>
          </div>
          <div class="col-6 text-right">
            <a asp-controller="Job_title" asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-square-plus"></i> Create new job title</a>
          </div>
       </div>
       <br /><br />
       @if(Model.Count() > 0)
       {
         <table class="table table-bordered table-striped" style="width:100%">
           <thead>
             <tr>
              <th>
              Job Title
              </th>
              <th></th>
              </tr>
           </thead>
           <tbody>
            @foreach(var obj in Model)
            {
              <tr>
              <td width="50%">@obj.Title</td>
              <td class="text-center">
                  <div class="w-75 btn-group" role="group">
                  <a asp-controller="Job_title" asp-route-id="@obj.Id" asp-action="Edit" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                  <a asp-controller="Job_title" asp-route-id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2"><i class="fa-solid fa-trash"></i></a>
                  </div>
              </td>
              </tr>
            }
           </tbody>
         </table>
       }
       else
       {
       <p>No job title exists.</p>
       }
    </div>

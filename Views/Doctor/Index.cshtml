@model IEnumerable<Hospital.Models.Doctor>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Doctor List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Doctor" asp-action="Upsert" class="btn btn-primary"><i class="fa-solid fa-square-plus"></i>&nbsp Create new Doctor cart</a>
        </div>
    </div>
    <br /><br />
    @if (Model!=null && Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Doctor Name
                    </th>
                    <th>
                        Job Title
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="30%">@obj.User_N.FullName</td>
                        <td width="20%">@obj.Job_Title.Title</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Doctor" asp-route-id="@obj.Id" asp-action="Upsert" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a asp-controller="Doctor" asp-route-id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2"><i class="fa-solid fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No doctor exists.</p>
    }
</div>
